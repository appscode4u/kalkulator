					x:Name="HISTORIA"
					Background="Gray"
					AlternatingRowBackground="DarkGray"
					CanUserResizeColumns="False"
					CanUserResizeRows="False"
					FontSize="14"
					VerticalContentAlignment="Center"
					HorizontalContentAlignment="Center"
					MouseRightButtonUp="RMBUAction"
					Canvas.Left="2"
					Width="400"
					Canvas.Top="0"
					Height="272">
					<!-- formatowanie komórek -->
					<DataGrid.CellStyle>
						<Style
							TargetType="DataGridCell">
							<Setter
								Property="TextBlock.TextAlignment"
								Value="Center" />
						</Style>
					</DataGrid.CellStyle>
					<DataGrid.Resources>
						<!-- styl nagłówków kolumn -->
						<Style
							TargetType="{x:Type DataGridColumnHeader}">
							<Setter
								Property="Background"
								Value="Turquoise" />
							<Setter
								Property="FontWeight"
								Value="SemiBold" />
							<Setter
								Property="BorderThickness"
								Value="0,0,1,2" />
							<Setter
								Property="BorderBrush"
								Value="Black" />
							<Setter
								Property="HorizontalContentAlignment"
								Value="Center" />
						</Style>
					</DataGrid.Resources>
					<!-- nagłówki kolumn -->
					<!-- nazwa nagłówka / mapowanie na dane z klasy Log / szerokość -->
					<DataGrid.Columns>
						<DataGridTextColumn
							Header=" liczba 1"
							Binding="{Binding Kliczba1}"
							Width="100" />
						<DataGridTextColumn
							Header=" działanie"
							Binding="{Binding Kdzialanie}"
							Width="80" />
						<DataGridTextColumn
							Header=" liczba 2"
							Binding="{Binding Kliczba2}"
							Width="100" />
						<DataGridTextColumn
							Header=" wynik"
							Binding="{Binding Kwynik}"
							Width="*" />
					</DataGrid.Columns>
